@page "/LoadChildOnDemand"
@using Syncfusion.Blazor
@using Syncfusion.Blazor.Gantt
@using Syncfusion.Blazor.Data
@using Syncfusion.Blazor.Buttons;
@using Ganttfeatures.Models

<SfGantt @ref="GanttRef" TValue="TaskData" Query="@GanttQuery" Height="450px" Width="1000px" Toolbar="@(new List<string>(){ "Add", "Edit", "Delete", "Update", "Cancel", "Indent","Outdent", "ExpandAll", "CollapseAll", "PrevTimeSpan", "NextTimeSpan"})"
    ProjectStartDate="@ProjectStartDate" EnableVirtualization="@enableVirtualization" ProjectEndDate="@ProjectEndDate" ScrollToTaskbarOnClick="true" LoadChildOnDemand="@loadchildondemand">
    <SfDataManager Url="/api/LoadOnDemand" Adaptor="Adaptors.UrlAdaptor"></SfDataManager>
    <GanttTaskFields Id="ID" Name="TaskName" StartDate="StartDate" EndDate="EndDate" Duration="Duration"
        Dependency="Predecessor" ParentID="ParentId" HasChildMapping="isParent">
    </GanttTaskFields>
    <GanttEditSettings AllowTaskbarEditing="true" AllowEditing="true" AllowAdding="true" AllowDeleting="true">
    </GanttEditSettings>
</SfGantt>
<SfCheckBox @bind-Checked="@loadchildondemand"  @onchange="onChange" Label="Load with Child"></SfCheckBox> 
<SfCheckBox @bind-Checked="@enableVirtualization"  @onchange="changeVirtualMode" Label="Enable Virtualization"></SfCheckBox> 


@code {
    private Query GanttQuery { get; set; }
    public static SfGantt<TaskData> GanttRef;
    private DateTime ProjectStartDate = new DateTime(2000, 1, 1);
    private DateTime ProjectEndDate = new DateTime(2500, 12, 31);
    private bool loadchildondemand { get; set; } = false;
    private bool enableVirtualization = true;
    protected override void OnInitialized()
    {
        GanttQuery = new Query().AddParams("RecordCount", "3").AddParams("StartDate", new DateTime(2022, 10, 03).ToString()).AddParams("loadchildondemand", loadchildondemand).AddParams("EndDate", new DateTime(2022, 10, 05).ToString());
    }
    public void changeVirtualMode(ChangeEventArgs args)
    {
        enableVirtualization = (bool)args.Value;
    }
    public void onChange(ChangeEventArgs args)
    {
        GanttQuery = new Query().AddParams("loadchildondemand", (bool)args.Value).AddParams("RecordCount", "100").AddParams("StartDate", new DateTime(2022, 10, 03).ToString()).AddParams("EndDate", new DateTime(2022, 10, 05).ToString());
    }
}
